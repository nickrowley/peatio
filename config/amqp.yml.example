connect:
  host: 127.0.0.1
  port: 5672

exchange:
  trade:
    name: zimbitx.trade
    type: headers
  notification:
    name: zimbitx.notification
    type: direct
  orderbook:
    name: zimbitx.orderbook
    type: fanout

queue:
  matching:
    name: zimbitx.matching
    durable: true
  slave_book:
    name: zimbitx.orderbook.slave
    durable: true
  new_trade:
    name: zimbitx.trade.new
    durable: true
  order_processor:
    name: zimbitx.order.processor
    durable: true
  market_ticker:
    name: zimbitx.trade.market_ticker
  pusher_market:
    name: zimbitx.pusher.market
  pusher_member:
    name: zimbitx.pusher.member
  withdraw_coin:
    name: zimbitx.withdraw.coin
  deposit_coin:
    name: zimbitx.deposit.coin
  deposit_coin_address:
    name: zimbitx.deposit.coin.address
    durable: true
  email:
    name: zimbitx.notification.email
    durable: true
  sms:
    name: zimbitx.notification.sms
    durable: true

binding:
  matching:
    queue: matching
    clean_start: true
  slave_book:
    queue: slave_book
    exchange: orderbook
  trade_executor:
    queue: new_trade
    manual_ack: true
  order_processor:
    queue: order_processor
    manual_ack: true
  market_ticker:
    queue: market_ticker
    exchange: trade
  pusher_market:
    queue: pusher_market
    exchange: trade
  pusher_member:
    queue: pusher_member
  withdraw_coin:
    queue: withdraw_coin
  deposit_coin:
    queue: deposit_coin
  deposit_coin_address:
    queue: deposit_coin_address
  email_notification:
    queue: email
    exchange: notification
  sms_notification:
    queue: sms
    exchange: notification

channel:
  trade_executor:
    prefetch: 5
  order_processor:
    prefetch: 5
